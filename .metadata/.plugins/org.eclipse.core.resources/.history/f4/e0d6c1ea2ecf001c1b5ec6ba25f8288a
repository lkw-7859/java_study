package work01;

public class PointStar {

	public static void main(String[] args) {
		int x = 5;
		
		for(int i=1;i<=x;i++) {
			pointStar(x-i,2*i-1);
		}
		
		for(int i=x-1;i>0;i--) {
			pointStar(x-i,2*i-1);
		}
	}
	
	public static void pointStar(int b,int p) {
		for(int i=0;i<b;i++) {
			System.out.print(" ");
		}
		
		for(int i=0;i<p;i++) {
			System.out.print("*");
		}
		
		System.out.println();
	}

}
