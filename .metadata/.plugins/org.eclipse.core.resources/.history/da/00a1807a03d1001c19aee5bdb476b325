package work03;

import java.util.Scanner;

public class PutAsteriskAlt2 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("몇 개를 표시할까요? : ");
		int n=sc.nextInt();
		for(int i=0;i<n;i++) {
			if(i%2==0)
				System.out.print('*');
			else
				System.out.print('+');
		}
		System.out.println();
	}

}
